            <span>Piscina</span>
        </div>
        <div class="col-lg-2">
            <input type="checkbox">
            <span>Piscina</span>
        </div>
    </div>
    <div class="col-lg-12">
        <h4>Descrizione</h4>
        <textarea maxlength='250' id="descrizione" class="form-control light-top-margin no-resize"  ></textarea>
    </div>
    <a id="btn" class="btn btn-lg btn-danger col-lg-4 col-lg-offset-1 light-top-margin" type="submit">Annulla</a>
    <%=form.submit%>
    <a href="modifica_struttura" id="btn" class="btn btn-lg btn-primary col-lg-4 col-lg-offset-2 light-top-margin" type="submit">Inserisci</a>
    </form>
    <% end %>
